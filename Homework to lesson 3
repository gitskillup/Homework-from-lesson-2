#1.1
import math
import random
min = random.randint(0, 59)
if min >= 0 and min <15:
    print(f'Your number is {min}, this is first quarter')
elif min >= 15 and min <30:
    print(f'Your number is {min}, this is second quarter')
elif min >= 30 and min <45:
    print(f'Your number is {min}, this is third quarter')
else:
    print(f'Your number is {min}, this is fourth quarter')

#1.2
birth_month = (int(input('What month were you born in? (enter a number)')))
if (birth_month >= 3 and birth_month < 6):
    print('Весна - Все довкола розцвітало.')
elif birth_month >= 6 and birth_month < 9:
    print('Літо - Діти насолоджувались літніми канікулами')
elif birth_month >= 9 and birth_month < 12:
    print('Осінь - Все довкола загоралось яскравими фарбами.')
elif birth_month == 12 or birth_month == 1 or birth_month == 2:
    print('Зима - За вікном падав сніг')
else:
    print('Please enter correct month number')

#1.3
import random
import math

from random import random
n = random() * 900 + 100
n = int(n)
print(f'Your number is:',n)
a = n // 100
b = (n // 10) % 10
c = n % 10
sum = a + b + c
print(f'Sum of this nubers:',sum)
if n % 2 == 0 and sum % 3 == 0 and n % 6 == 0:
    print(f'Everything is fine.', 'Your number divide on 6 =',n // 6)
else:
    print('Something wrong')

#1.4
x = float(input("Введіть значення x: "))
y = float(input("Введіть значення y: "))

if x > 0 and y > 0:
   print("Точка знаходиться в першій координатній чверті")
elif x < 0 and y > 0:
   print("Точка знаходиться в другій координатній чверті")
elif x < 0 and y < 0:
   print("Точка знаходиться в третій координатній чверті")
else:
   print("Точка знаходиться в четвертій координатній чверті")


